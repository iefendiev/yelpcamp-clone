<%- include("../partials/header")%>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">Edit camp spot : <%=campground.name%></h1>
		<div style="width:30%; margin:25px auto;">
			<form class="camp-edit" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
								<input type="text" class="form-control" name="campground[name]"	 value="<%=campground.name%>">
				</div>
				<div class="form-group">
								<input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.0" step="1.0">
				</div>
				<div class="form-group">
									<input type="text "class="form-control" name="campground[image]" value="<%=campground.image%>">
				</div>
				<div class="form-group">
									<input type="text "class="form-control" name="campground[description]" value="<%=campground.description%>">
				</div>
			<button class="btn btn-lg btn-default btn-block btn-primary">		Submit	</button>
			</form>
			<a class="link-camps" href="/campgrounds">View all campgrounds</a>	
		</div>
		
	</div>

</div>

<%- include("../partials/footer")%>
